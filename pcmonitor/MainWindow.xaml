<Window x:Class="pcmonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pcmonitor"
        mc:Ignorable="d"
        Title="PC Monitor" Height="450" Width="800">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="401" Margin="10,10,0,0" VerticalAlignment="Top" Width="773">
            <TabItem x:Name="Info" Header="Info" Loaded="Info_Loaded">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Procesor:" HorizontalAlignment="Left" Margin="10,16,0,0" VerticalAlignment="Top"/>
                    <TextBlock x:Name="processorName" HorizontalAlignment="Left" Margin="98,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="659"/>
                    <Label Content="Ilość Rdzeni:" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top"/>
                    <TextBlock x:Name="processorCores" HorizontalAlignment="Left" Margin="98,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="659"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="Disks" Header="Dyski">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
